        "enzyme": "^3.10.0",
        "enzyme-adapter-preact-pure": "^2.0.0",
        "eslint": "^6.0.1",
        "eslint-config-preact": "^1.1.0",
        "express": "^4.17.1",
        "express-fileupload": "1.1.7-alpha.3",
